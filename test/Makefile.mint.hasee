default_target : all

C_COMPILER=gcc
C_SOURCE_FILES=testc.c
C_INCLUDE_DIR_RUNTIME=

C_DEFAULT_TARGET_NAME=testc


CPP_COMPILER=g++
CPP_SOURCE_FILES=testcpp.cpp
CPP_INCLUDE_DIR_RUNTIME=

CPP_DEFAULT_TARGET_NAME=testpp

BOOST_HOME=
BOOST_INCLUDE_DIR=$(BOOST_HOME)
BOOST_LIB_DIR=$(BOOST_HOME)\stage\lib


all : TARGET_C TARGET_CPP


TARGET_C :
	$(C_COMPILER) $(C_SOURCE_FILES) -o ${C_DEFAULT_TARGET_NAME}	


TARGET_CPP :
	$(CPP_COMPILER) $(CPP_SOURCE_FILES) -o ${CPP_DEFAULT_TARGET_NAME}	
